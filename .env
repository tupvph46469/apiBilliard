NODE_ENV=production
PORT=3000
TZ=Asia/Ho_Chi_Minh

APP_PUBLIC_BASE_URL=https://your-domain.com        # ⚠️ domain thực tế (HTTPS)

MONGODB_URI=mongodb://user:strongPass@db-host:27017/billiard_prod?authSource=admin  # ⚠️
MONGOOSE_DEBUG=false
DB_MAX_POOL_SIZE=50
DB_CONNECT_TIMEOUT_MS=10000

JWT_ACCESS_SECRET=prod_access_secret_ultra_random_64chars   # ⚠️
JWT_REFRESH_SECRET=prod_refresh_secret_ultra_random_64chars # ⚠️
JWT_ACCESS_EXPIRES=10m
JWT_REFRESH_EXPIRES=30d
COOKIE_SECURE=true

# Prod nên whiltelist origin rõ ràng
CORS_ORIGINS=https://app.your-domain.com,https://pos.your-domain.com

UPLOAD_DIR=public/uploads
UPLOAD_MAX_FILE_SIZE_MB=5
UPLOAD_MAX_FILES=10
UPLOAD_ALLOW_SVG=false

LOG_LEVEL=info
REQUEST_LOG=true

ENABLE_BACKUP_SCHEDULE=true
BACKUP_CRON=0 3 * * *             # 03:00 hằng ngày
BACKUP_MAX_FILES=30

QR_PUBLIC_DIR=public/qr
